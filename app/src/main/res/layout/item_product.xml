<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp">

    <!-- Product Image -->
    <ImageView
        android:id="@+id/product_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        android:background="@drawable/grey_bg"
        android:src="@drawable/jersey2" />
    
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:id="@+id/nameText"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/product_image"
        android:layout_gravity="center_vertical"
        android:textSize="14sp"
        android:text="GERMANY 24 AWAY JERSEY"/>

    <TextView
        android:layout_width="68dp"
        android:layout_height="19dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        android:id="@+id/priceText"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/nameText"
        app:layout_constraintStart_toEndOf="@id/product_image"
        android:layout_gravity="center_vertical"
        android:textSize="16sp"
        android:text="500 000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:id="@+id/size"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/priceText"
        app:layout_constraintStart_toEndOf="@id/product_image"
        android:layout_gravity="center_vertical"
        android:textSize="14sp"
        android:text="M"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/delete_button"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:gravity="center"
        android:background="@drawable/trash_ic"
        android:textColor="@color/White"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/product_image" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:id="@+id/Remove_text"
        android:layout_marginTop="10dp"
        android:textColor="@color/grey_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/delete_button"
        android:layout_gravity="center_vertical"
        android:textSize="12sp"
        android:text="Remove"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/increase_button"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/increase_bg"
            android:gravity="center"
            android:text="+"
            android:textColor="@color/White"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/increaseText"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/increase_button" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/decrease_button"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/increase_bg"
            android:gravity="center"
            android:text="-"
            android:textColor="@color/White"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/increaseText" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
